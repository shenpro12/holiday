        <div style="margin:auto 0px; width: 15%;height:5px; background-color:rgb(248, 157, 72)"></div>
        <div style="border:3px solid rgb(252, 132, 20); width: 70px; height:70px; background-color:rgb(248, 157, 72); border-radius:100%; display:flex"><p style="font-size: 25px; margin: auto; color:white; font-weight:bold">3</p></div>
        {{/if}}
        {{#if step_3}}
        <div style="border:3px solid rgb(40, 183, 4); width: 70px; height:70px; background-color:rgb(66, 248, 75); border-radius:100%; display:flex"><p style="font-size: 25px; margin: auto; color:white; font-weight:bold"><i class="ti-thumb-up"></i></p></div>
        <div style="margin:auto 0px; width: 15%;height:5px; background-color: rgb(66, 248, 75)"></div>
        <div style="border:3px solid rgb(40, 183, 4); width: 70px; height:70px; background-color:rgb(66, 248, 75); border-radius:100%; display:flex"><p style="font-size: 25px; margin: auto; color:white; font-weight:bold"><i class="ti-thumb-up"></i></p></div>
        <div style="margin:auto 0px; width: 15%;height:5px; background-color:rgb(248, 157, 72)"></div>
        <div style="border:3px solid rgb(252, 132, 20); width: 70px; height:70px; background-color:rgb(248, 157, 72); border-radius:100%; display:flex"><p style="font-size: 25px; margin: auto; color:white; font-weight:bold">3</p></div>
        {{/if}}
        {{#if checkDone}}
        <div style="border:3px solid rgb(40, 183, 4); width: 70px; height:70px; background-color:rgb(66, 248, 75); border-radius:100%; display:flex"><p style="font-size: 25px; margin: auto; color:white; font-weight:bold"><i class="ti-thumb-up"></i></p></div>
        <div style="margin:auto 0px; width: 15%;height:5px; background-color: rgb(66, 248, 75)"></div>
        <div style="border:3px solid rgb(40, 183, 4); width: 70px; height:70px; background-color:rgb(66, 248, 75); border-radius:100%; display:flex"><p style="font-size: 25px; margin: auto; color:white; font-weight:bold"><i class="ti-thumb-up"></i></p></div>
        <div style="margin:auto 0px; width: 15%;height:5px; background-color:rgb(66, 248, 75)"></div>
        <div style="border:3px solid rgb(40, 183, 4); width: 70px; height:70px; background-color:rgb(66, 248, 75); border-radius:100%; display:flex"><p style="font-size: 25px; margin: auto; color:white; font-weight:bold"><i class="ti-thumb-up"></i></p></div>
        {{/if}}

    </div>

    <div style="width: 100%;height:100px; margin-top:3%; display:flex;justify-content: center; ">
        {{#if checkDone}}
        <p style="color: darkorange;font-weight:bold">{{status}}<a href="/taikhoan/dangnhap" style="text-decoration: none;color:rgb(66, 248, 75)"> Đăng nhập</a></p>
        {{/if}}
        
        {{#if step_1}}
        <form style="width:100%; height:200px;" method="post" action="/taikhoan/matkhau">
        <p style="color: darkorange;font-weight:bold">{{status}}</p>
            <p style="color: darkorange;font-weight:bold">Nhập UserName:</p>
            <input name="userName_1" style="width: 20%; padding: 10px 5px" placeholder="User Name"/>
            <button type="submit" style="width:30%; padding:10px 0px; margin-botton:5%">Tiếp theo</button>

        </form>
        {{/if}}
        {{#if step_2}}
        <form style="width:100%; height:200px;" method="post" action="/taikhoan/matkhau">
        <p style="color: darkorange;font-weight:bold">{{status}}</p>
            <p style="color: darkorange;font-weight:bold">Vui lòng kiểm tra hộp thư {{user.mail}} để lấy mã xác nhận!</p>
            <input name="userName_2" style="width: 20%; padding: 10px 5px; display:none" placeholder="User Name" value="{{user.username}}"/>
            <input name="Code" style="width: 20%; padding: 10px 5px" placeholder="Mã xác nhận"/>
            <button type="submit" style="width:30%; padding:10px 0px; margin-botton:5%">Tiếp theo</button>
        </form>
        {{/if}}
        {{#if step_3}}
        <form style="width:100%; height:200px;" method="post" action="/taikhoan/matkhau">
        <p style="color: darkorange;font-weight:bold">{{status}}</p>
            <input name="newPassword" style="width: 20%; padding: 10px 5px" placeholder="Mật khẩu mới"/>
            <input name="userName_3" style="width: 20%; padding: 10px 5px; display:none" placeholder="User Name" value="{{user.username}}"/>
            <input name="re_newPassword" style="width: 20%; padding: 10px 5px;" placeholder="Nhập lại mật khẩu"/>
            <button type="submit" style="width:30%; padding:10px 0px; margin-botton:5%">Cập nhật</button>
        </form>
        {{/if}}
        </form>
